<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Panel Maestro</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="p-8 bg-gray-50">
  <h1 class="text-2xl font-bold mb-6">ðŸ“Œ Lista de 3Â°A</h1>
  <form action="/guardar-asistencias" method="POST">
    <table class="w-full bg-white rounded shadow">
      <tr class="bg-gray-200">
        <th class="p-2">Alumno</th>
        <th>Presente</th>
        <th>Falta</th>
        <th>Retardo</th>
      </tr>
      <% alumnos.forEach(a => { %>
      <tr>
        <td class="p-2"><%= a.nombre %></td>
        <td class="text-center"><input type="radio" name="<%= a.id %>" value="Presente"></td>
        <td class="text-center"><input type="radio" name="<%= a.id %>" value="Falta"></td>
        <td class="text-center"><input type="radio" name="<%= a.id %>" value="Retardo"></td>
      </tr>
      <% }) %>
    </table>
    <button class="mt-4 bg-blue-600 text-white px-6 py-2 rounded hover:bg-blue-700">Guardar</button>
  </form>
</body>
</html>